<Window x:Class="LogisticsFlow.WPF.Views.ProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogisticsFlow.WPF.Views"
        xmlns:converters="clr-namespace:LogisticsFlow.WPF.Common.Converters"
        mc:Ignorable="d"
        Title="ProfileView" Height="400" Width="400">
    
    <Window.Resources>
        <converters:MessageStateToBrushConverter x:Key="MessageStateToBrushConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Button
            Command="{Binding MenuViewCommand}"
            Content="Меню"
            Grid.Row="0"
            Margin="5"
            Width="50"
            HorizontalAlignment="Right"/>

        <StackPanel
            Grid.Row="1"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Background="LightCyan"
            Margin="20"
  
            Width="300">

            <TextBlock
                Text="Профиль сотрудника"
                FontSize="18"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Margin="0,0,0,20"/>

            <TextBlock
                Text="Имя:"
                FontSize="14"
                Margin="5,2"/>
            <TextBlock
                Text="{Binding Employee.Name}"
                FontSize="14"
                FontWeight="Bold"
                Margin="5,2"/>

            <TextBlock
                Text="Email:"
                FontSize="14"
                Margin="5,2"/>
            <TextBlock
                Text="{Binding Employee.Email}"
                FontSize="14"
                FontWeight="Bold"
                Margin="5,2"/>

            <TextBlock
                Text="Телефон:"
                FontSize="14"
                Margin="5,2"/>
            <TextBlock 
                Text="{Binding Employee.PhoneNumber}"
                FontSize="14"
                FontWeight="Bold"
                Margin="5,2"/>

            <TextBlock
                Text="Пароль:"
                FontSize="14"
                Margin="5,2"/>
            <TextBlock 
                Text="{Binding Employee.Password}"
                FontSize="14"
                FontStyle="Italic"
                Margin="5,2"/>

        </StackPanel>

        <TextBlock 
            Text="{Binding Message.Message}"
            Foreground="{Binding Message.State,
                Converter={StaticResource MessageStateToBrushConverter}}"
            FontWeight="Bold"
            Margin="10"
            Grid.Row="2"
            HorizontalAlignment="Center"/>
    </Grid>
</Window>
