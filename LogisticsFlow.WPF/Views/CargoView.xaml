<Window x:Class="LogisticsFlow.WPF.Views.CargoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogisticsFlow.WPF.Views"
        xmlns:converters="clr-namespace:LogisticsFlow.WPF.Common.Converters"
        mc:Ignorable="d"
        Title="Грузы" Height="700" Width="1200">

    <Window.Resources>
        <converters:MessageStateToBrushConverter x:Key="MessageStateToBrushConverter"/>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button
            Command="{Binding MenuViewCommand}"
            Content="Меню"
            Grid.Column="1"
            Grid.Row="0"
            HorizontalAlignment="Right"
            Margin="5"/>

            <StackPanel
            Margin="5"
            Grid.Row="1"
            Grid.Column="0">

                <TextBlock
                Text="Название:"/>
                <TextBox 
                Text="{Binding CargoAdd.Name}"
                Margin="5"/>

                <TextBlock 
                Text="Описание:"/>
                <TextBox 
                Text="{Binding CargoAdd.Description}" 
                Margin="5"/>

                <TextBlock 
                Text="Ширина:"/>
                <TextBox 
                Text="{Binding CargoAdd.Weight}" 
                Margin="5"/>

                <TextBlock 
                Text="Объём:"/>
                <TextBox 
                Text="{Binding CargoAdd.Volume}" 
                Margin="5"/>

                <Button 
                Content="Создать"
                Command="{Binding CreateCommand}"
                Width="150"
                Margin="10"/>
            </StackPanel>

            <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="5">

                <TextBlock
                Text="Id:"/>
                <TextBox 
                Text="{Binding CargoWorker.Id}"
                IsReadOnly="True"
                Margin="5"/>

                <TextBlock
                Text="Название:"/>
                <TextBox 
                Text="{Binding CargoWorker.Name}"
                Margin="5"/>

                <TextBlock 
                Text="Описание:"/>
                <TextBox 
                Text="{Binding CargoWorker.Description}" 
                Margin="5"/>

                <TextBlock 
                Text="Ширина:"/>
                <TextBox 
                Text="{Binding CargoWorker.Weight}" 
                Margin="5"/>

                <TextBlock 
                Text="Объём:"/>
                <TextBox 
                Text="{Binding CargoWorker.Volume}" 
                Margin="5"/>

                <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center">

                    <Button
                    Command="{Binding UpdateCommand}" 
                    Content="Обновить"
                    Width="150"
                    Margin="10"/>
                    <Button
                    Command="{Binding DeleteCommand}"
                    Content="Удалить"
                    Width="150"
                    Margin="10"/>
                </StackPanel>
            </StackPanel>

            <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="AliceBlue">

                <Button 
                 Command="{Binding GetAllCommand}"
                Content="Показать все записи"
                Width="150"
                Margin="10"/>

                <ListBox
                ItemsSource="{Binding CargoList}"
                SelectedItem="{Binding CargoWorker}"
                Background="LightGray"
                Margin="10"
                Height="450">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                Text="Название:"/>
                                <TextBlock 
                                Text="{Binding Name}"
                                FontWeight="Bold"
                                Margin="5 0 0 0"
                                Width="150"/>

                                <TextBlock
                                Text="Описание:"
                                Margin="5 0 0 0"/>
                                <TextBlock 
                                Text="{Binding Description}" 
                                Width="250"
                                TextWrapping="Wrap"
                                FontWeight="Bold"
                                Margin="5 0 0 0"/>

                                <TextBlock 
                                Text="Ширина:"
                                Margin="5 0 0 0"/>
                                <TextBlock 
                                Text="{Binding Weight}"
                                Width="70"
                                FontWeight="Bold"
                                Margin="5 0 0 0"/>

                                <TextBlock 
                                Text="Объём:"
                                Margin="5 0 0 0"/>
                                <TextBlock 
                                Text="{Binding Volume}"
                                Width="70"
                                FontWeight="Bold"
                                Margin="5 0 0 0"/>

                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock 
                Text="{Binding Message.Message}"
                Foreground="{Binding Message.State,
                     Converter={StaticResource MessageStateToBrushConverter}}"
                FontWeight="Bold"
                Margin="5"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
