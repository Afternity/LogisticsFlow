<Window x:Class="LogisticsFlow.WPF.Views.RouteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogisticsFlow.WPF.Views"
        xmlns:converters="clr-namespace:LogisticsFlow.WPF.Common.Converters"
        mc:Ignorable="d"
        Title="Маршруты" Height="700" Width="1200" WindowState="Maximized">

    <Window.Resources>
        <converters:MessageStateToBrushConverter x:Key="MessageStateToBrushConverter"/>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button
            Command="{Binding MenuViewCommand}"
            Content="Меню"
            Grid.Column="1"
            Grid.Row="0"
            HorizontalAlignment="Right"
            Margin="5"/>

            <StackPanel
            Margin="5"
            Grid.Row="1"
            Grid.Column="0">

                <TextBlock
                Text="Откуда:"/>
                <TextBox 
                Text="{Binding RouteAdd.Origin}"
                Margin="5"/>

                <TextBlock 
                Text="Куда:"/>
                <TextBox 
                Text="{Binding RouteAdd.Destination}" 
                Margin="5"/>

                <TextBlock 
                Text="Расстояние (км):"/>
                <TextBox 
                Text="{Binding RouteAdd.Distance}" 
                Margin="5"/>

                <TextBlock 
                Text="Примерное время:"/>
                <TextBox 
                Text="{Binding RouteAdd.EstimatedTime}" 
                Margin="5"/>

                <Button 
                Content="Создать"
                Command="{Binding CreateCommand}"
                Width="150"
                Margin="10"/>
            </StackPanel>

            <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="5">

                <TextBlock
                Text="Id:"/>
                <TextBox 
                Text="{Binding RouteWorker.Id}"
                IsReadOnly="True"
                Margin="5"/>

                <TextBlock
                Text="Откуда:"/>
                <TextBox 
                Text="{Binding RouteWorker.Origin}"
                Margin="5"/>

                <TextBlock 
                Text="Куда:"/>
                <TextBox 
                Text="{Binding RouteWorker.Destination}" 
                Margin="5"/>

                <TextBlock 
                Text="Расстояние (км):"/>
                <TextBox 
                Text="{Binding RouteWorker.Distance}" 
                Margin="5"/>

                <TextBlock 
                Text="Примерное время:"/>
                <TextBox 
                Text="{Binding RouteWorker.EstimatedTime}" 
                Margin="5"/>

                <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center">

                    <Button
                    Command="{Binding UpdateCommand}" 
                    Content="Обновить"
                    Width="150"
                    Margin="10"/>
                    <Button
                    Command="{Binding DeleteCommand}"
                    Content="Удалить"
                    Width="150"
                    Margin="10"/>
                </StackPanel>
            </StackPanel>

            <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="AliceBlue">

                <Button 
                 Command="{Binding GetAllCommand}"
                Content="Показать все записи"
                Width="150"
                Margin="10"/>

                <ListBox
                ItemsSource="{Binding RouteList}"
                SelectedItem="{Binding RouteWorker}"
                Background="LightGray"
                Margin="10"
                Height="450">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                Text="Откуда:"/>
                                <TextBlock 
                                Text="{Binding Origin}"
                                FontWeight="Bold"
                                Margin="5 0 0 0"
                                Width="150"/>

                                <TextBlock
                                Text="Куда:"
                                Margin="5 0 0 0"/>
                                <TextBlock 
                                Text="{Binding Destination}" 
                                Width="150"
                                FontWeight="Bold"
                                Margin="5 0 0 0"/>

                                <TextBlock 
                                Text="Расстояние:"
                                Margin="5 0 0 0"/>
                                <TextBlock 
                                Text="{Binding Distance}"
                                Width="100"
                                FontWeight="Bold"
                                Margin="5 0 0 0"/>

                                <TextBlock 
                                Text="Время:"
                                Margin="5 0 0 0"/>
                                <TextBlock 
                                Text="{Binding EstimatedTime}"
                                Width="120"
                                FontWeight="Bold"
                                Margin="5 0 0 0"/>

                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock 
                Text="{Binding Message.Message}"
                Foreground="{Binding Message.State,
                     Converter={StaticResource MessageStateToBrushConverter}}"
                FontWeight="Bold"
                Margin="5"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>

</Window>
