<Window x:Class="LogisticsFlow.WPF.Views.EmployeeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogisticsFlow.WPF.Views"
        xmlns:converters="clr-namespace:LogisticsFlow.WPF.Common.Converters"
        mc:Ignorable="d"
        Title="Работники" Height="850" Width="1300" WindowState="Maximized">

    <Window.Resources>
        <converters:MessageStateToBrushConverter x:Key="MessageStateToBrushConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button
            Command="{Binding MenuViewCommand}"
            Content="Меню"
            Grid.Column="1"
            Grid.Row="0"
            HorizontalAlignment="Right"
            Margin="5"/>

        <StackPanel
            Margin="5"
            Grid.Row="1"
            Grid.Column="0">

            <TextBlock
                Text="Имя:"/>
            <TextBox 
                Text="{Binding EmployeeAdd.Name}"
                Margin="5"/>

            <TextBlock 
                Text="Пароль:"/>
            <TextBox
                Text="{Binding EmployeeAdd.Password}"
                Margin="5"/>

            <TextBlock 
                Text="Email:"/>
            <TextBox 
                Text="{Binding EmployeeAdd.Email}" 
                Margin="5"/>

            <TextBlock 
                Text="Телефон:"/>
            <TextBox 
                Text="{Binding EmployeeAdd.PhoneNumber}" 
                Margin="5"/>

            <Button 
                Content="Создать"
                Command="{Binding CreateCommand}"
                Width="150"
                Margin="10"/>
        </StackPanel>

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="5">

            <TextBlock
                Text="Id:"/>
            <TextBox 
                Text="{Binding EmployeeWorker.Id}"
                IsReadOnly="True"
                Margin="5"/>

            <TextBlock
                Text="Имя:"/>
            <TextBox 
                Text="{Binding EmployeeWorker.Name}"
                Margin="5"/>

            <TextBlock 
                Text="Пароль:"/>
            <TextBox
                Text="{Binding EmployeeWorker.Password}"
                Margin="5"/>

            <TextBlock 
                Text="Email:"/>
            <TextBox 
                Text="{Binding EmployeeWorker.Email}" 
                Margin="5"/>

            <TextBlock 
                Text="Телефон:"/>
            <TextBox 
                Text="{Binding EmployeeWorker.PhoneNumber}" 
                Margin="5"/>

            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                
                <Button
                    Command="{Binding UpdateCommand}" 
                    Content="Обновить"
                    Width="150"
                    Margin="10"/>
                <Button
                    Command="{Binding DeleteCommand}"
                    Content="Удалить"
                    Width="150"
                    Margin="10"/>
            </StackPanel>
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="AliceBlue">

            <Button 
                 Command="{Binding GetAllCommand}"
                Content="Показать все записи"
                Width="150"
                Margin="10"/>

            <ListBox
                ItemsSource="{Binding EmployeeList}"
                SelectedItem="{Binding EmployeeWorker}"
                Background="LightGray"
                Margin="10"
                Height="450">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Text="Имя:"/>
                            <TextBlock 
                                Text="{Binding Name}"
                                FontWeight="Bold"
                                Margin="5 0 0 0"
                                Width="150"/>

                            <TextBlock
                                Text="Email:"
                                Margin="5 0 0 0"/>
                            <TextBlock 
                                Text="{Binding Email}" 
                                Width="150"
                                FontWeight="Bold"
                                Margin="5 0 0 0"/>

                            <TextBlock
                                Text="Пароль:"
                                Margin="5 0 0 0"/>
                            <TextBlock 
                                Text="{Binding Password}" 
                                Width="150"
                                FontWeight="Bold"
                                Margin="5 0 0 0"/>

                            <TextBlock 
                                Text="Телефон:"
                                Margin="5 0 0 0"/>
                            <TextBlock 
                                Text="{Binding PhoneNumber}"
                                Width="120"
                                FontWeight="Bold"
                                Margin="5 0 0 0"/>

                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <TextBlock 
                Text="{Binding Message.Message}"
                Foreground="{Binding Message.State,
                     Converter={StaticResource MessageStateToBrushConverter}}"
                FontWeight="Bold"
                Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
