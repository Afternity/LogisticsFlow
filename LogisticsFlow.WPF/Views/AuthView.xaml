<Window x:Class="LogisticsFlow.WPF.Views.AuthView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogisticsFlow.WPF.Views"
        xmlns:converters="clr-namespace:LogisticsFlow.WPF.Common.Converters"
        mc:Ignorable="d"
        Title="Авторизация" Height="270" Width="400" WindowStartupLocation="CenterScreen">
    
    
    <Window.Resources>
        <converters:MessageStateToBrushConverter x:Key="MessageStateToBrushConverter"/>
    </Window.Resources>

    <Grid>
        <StackPanel 
            Margin="20">

            <TextBlock 
                Text="Авторизация" 
                FontSize="20" 
                HorizontalAlignment="Center" 
                Margin="10"/>

            <TextBlock
                Text="Логин:"/>
            <TextBox 
                Text="{Binding EmployeeLogin}" 
                Margin="5"/>

            <TextBlock 
                Text="Пароль:"/>
            <TextBox 
                Text="{Binding EmployeePassword}"
                Margin="5"/>

            <Button 
                Command="{Binding AuthCommand}"
                Content="Войти" 
                Width="150"
                Margin="10"/>

            <TextBlock
                Text="{Binding MessageVm.Message}"
                Foreground="{Binding MessageVm.State,
                    Converter={StaticResource MessageStateToBrushConverter}}"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
